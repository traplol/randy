
#include core
#include memory

struct String in
    buffer: char&;
    length: int;
    capacity: int;
end

def make_string init: int -> String& in
    var self = cast(malloc(__sizeof(String)), String&);
    var buf = malloc(init);

    self.buffer = buf;
    self.length = 0;
    self.capacity = init;

    return self;
end

def free_string self: String& in
    free(cast(u64@(self), ptr));
    free(self);
end

def string_buf self: String& -> char& in
    return self.buffer;
end

def string_len self: String& -> int in
    return self.length;
end

def string_set_len self: String&, n: int in
    if n >= 0 and n <= self.capacity then
        self.length = n;
    end
end

def string_reset self: String& in
    self.length = 0;
end

def string_cap self: String& -> int in
    return self.capacity;
end

def string_get self: String&, idx: int -> char in
    return cast(u8@(self.buffer + idx), char);
end

def string_set self: String&, idx: int, val: char in
    u8!(self.buffer + idx, val);
end

def string_resize self: String&, new_cap: int in
    if new_cap < self.length or new_cap < self.capacity then
        return;
    end
    var new = malloc(new_cap);
    var old = self.buffer;
    var len = self.length;
    if new_cap < len then
        len = new_cap;
    end
    memcpy(new, old, len);
    free(old);
    self.buffer = new;
    self.length = len;
    self.capacity = new_cap;
end

def string_push self: String&, val: char in
    var len = self.length;
    var cap = self.capacity;
    if len == cap then
        string_resize(self, 2 * cap + 1);
    end
    string_set(self, len, val);
    self.length = len + 1;
end

def string_pop self: String& in
    var len = self.length;
    if len > 0 then
        self.length = len - 1;
    else
        printf("ERROR: string_pop out of bounds.\n");
        abort();
    end
end

def string_back self: String& -> char in
    var len = self.length;
    if len > 0 then
        return string_get(self, len-1);
    end
    printf("ERROR: string_back out of bounds.\n");
    abort();
end

def string_append_string self: String&, string: String& in
    var new_len = self.length + string.length;
    if new_len > self.capacity then
        string_resize(self, new_len);
    end
    memcpy(self.buffer + self.length, string.buffer, string.length);
    self.length = new_len;

