end

extern strlen: (cstr -> int);
def string_append_cstr self: String&, cstr: cstr in
    var n = strlen(cstr);
    if n + self.length > self.capacity then
        string_resize(self, self.length + n);
    end
    var str_end = self.buffer + self.length;
    memcpy(str_end, cstr, n);
    self.length += n;

